@model DAISIS.Models.Thread_comments
<div class="row">
    <div class="col-md-12">
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    </div>
    <div class="col-md-10 mx-auto">
        <h2>Nový příspěvek</h2>
        @using (Html.BeginForm(ViewContext.RouteData.Values["action"].ToString(), "ThreadComments", FormMethod.Post, new {Enctype = "multipart/form-data"}))
        {
            <div class="form-group">
                @Html.HiddenFor(m => m.commentID)
                @Html.HiddenFor(m => m.threadID)
                @Html.HiddenFor(m => m.userID)
            </div>
            <div class="form-group required">
                @Html.LabelFor(m => m.text, new {Class = "control-label"})
                @Html.TextAreaFor(m => m.text, new {Class = "form-control", Style = "min-height: 200px;"})
                @Html.ValidationMessageFor(m => m.text, "", new {@class = "text-danger"})
            </div>
            <button type="submit" class="btn btn-primary">Uložit</button>
        }
    </div>
</div>