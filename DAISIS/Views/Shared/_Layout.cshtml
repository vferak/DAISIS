<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | DAISIS</title>
    <script src="https://kit.fontawesome.com/e07e4422f0.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
    @Html.ActionLink("DAISIS", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">@Html.ActionLink("Home", "Index", "Home", new {}, new {@class = "nav-link"})</li>
            <li class="nav-item">@Html.ActionLink("Hry", "Index", "Games", new {}, new {@class = "nav-link"})</li>
            <li class="nav-item">@Html.ActionLink("Vydavatelé", "Index", "Publishers", new {}, new {@class = "nav-link"})</li>
            <li class="nav-item">@Html.ActionLink("Designéři", "Index", "Designers", new {}, new {@class = "nav-link"})</li>
        </ul>
    </div>
</nav>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>@Html.ActionLink("Test", "Test", "Home")</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
@Scripts.Render("~/Scripts/Site.js")
</body>
</html>