@using DAISIS.Models
@{
    ViewBag.Title = "Home Page";

    Threads thread = ViewBag.Thread;
    Games game = ViewBag.Game;
}

<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("Show", "Games", new {id = @game.gameID})#threads">@game.name</a>
        <div class="card">
            <div class="card-header">
                <h2>@thread.title - @thread.text</h2>
            </div>
        </div>
    </div>
</div>